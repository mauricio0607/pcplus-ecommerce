# Configurações de Banco de Dados

# Tipo de armazenamento ('postgres', 'supabase' ou 'memory')
STORAGE_TYPE=postgres

# PostgreSQL - necessário para STORAGE_TYPE=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pcplus
DATABASE_SSL=false

# Supabase - necessário para STORAGE_TYPE=supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-chave-anon
SUPABASE_SERVICE_KEY=sua-chave-service-role

# Configurações da Aplicação
PORT=3000
NODE_ENV=production
SESSION_SECRET=sua-chave-secreta-aqui

# Mercado Pago (opcional)
MERCADO_PAGO_ACCESS_TOKEN=TEST-0000000000000000-000000-00000000000000000000000000000000-000000000
# URL de notificação do webhook para o Mercado Pago
WEBHOOK_URL=https://seu-dominio.com/api/payment/webhook